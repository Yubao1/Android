<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.androidart.activites.ViewEventDistributionActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:onClick="onClick"
                android:text="Android开发艺术探索_3.4 View事件的分发机制_3.4.1 点击事件的传递规则_第(2)条结论"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:onClick="onClick"
                android:text="子元素请求拦截父元素的除DOWN事件"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:onClick="onClick"
                android:text="不消耗up和move序列事件，onClick方法是否调用"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:onClick="onClick"
                android:text="同时在View中消耗onClick、onTouch、onTouchEvent方法，看其优先级"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:onClick="onClick"
                android:text="在View中onTouch设置了onClick方法和在onTouchEvent设置了onClick方法"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:onClick="onClick"
                android:text="Android开发艺术探索_3.4 View事件的分发机制_3.4.1 点击事件的传递规则_第(8)条结论"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:onClick="onClick"
                android:text="Android开发艺术探索_3.4 View事件的分发机制_3.4.1 点击事件的传递规则_第(9)条结论"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:onClick="onClick"
                android:text="序列事件的单项拦截"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
