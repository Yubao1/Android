<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.androidart.activites.ViewStubActivity">
    <Button
        android:id="@+id/btn_1"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:text="以ViewStub显示"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_2"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:text="以ViewStub的inflate方法显示"
        android:layout_height="wrap_content" />
    <ViewStub
        android:id="@+id/vs"
        android:inflatedId="@+id/ll_root"
        android:layout="@layout/layout_view_stub"
        android:background="#FF0000"
        android:layout_width="250dp"
        android:layout_height="250dp" />
</LinearLayout>
