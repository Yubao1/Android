<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplication.activitys.OtherKnowledgeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_volley"
            android:layout_width="match_parent"
            android:layout_marginTop="10px"
            android:onClick="onClick"
            android:text="Volley框架使用"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_mvvp"
            android:layout_width="match_parent"
            android:layout_marginTop="10px"
            android:onClick="onClick"
            android:text="MVVP模式"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_scroll_and_recycler_collide"
            android:layout_width="match_parent"
            android:layout_marginTop="10px"
            android:onClick="onClick"
            android:text="解决ListView与RecyclerView的滑动冲突"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_location"
            android:layout_width="match_parent"
            android:layout_marginTop="10px"
            android:onClick="onClick"
            android:text="获取经纬度"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_event_bus"
            android:layout_width="match_parent"
            android:layout_marginTop="10px"
            android:onClick="onClick"
            android:text="EventBus在不同进程能否接收到数据"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_resolution"
            android:layout_width="match_parent"
            android:layout_marginTop="10px"
            android:onClick="onClick"
            android:text="改变加载资源文件从而实现切换不同手机分辨率"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
