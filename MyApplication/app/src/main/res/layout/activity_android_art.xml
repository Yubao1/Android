<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.androidart.activites.AndroidArtActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_android_ipc_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Android中的IPC方式" />
            <Button
                android:id="@+id/btn_view_event_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="View的事件体系" />
            <Button
                android:id="@+id/btn_view_event_distribution_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="View的事件分发机制" />
            <Button
                android:id="@+id/btn_view_slide_conflict_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="View的滑动冲突" />
            <Button
                android:id="@+id/btn_remote_views_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="RemoteViews" />
            <Button
                android:id="@+id/btn_drawable_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Drawable" />
            <Button
                android:id="@+id/btn_animation_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Android动画深入学习" />
            <Button
                android:id="@+id/btn_window_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="理解Window和WindowManager" />
            <Button
                android:id="@+id/btn_thread_and_thread_pool_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Android线程和线程池" />
            <Button
                android:id="@+id/btn_bitmap_load_and_cache_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Bitmap的加载和Cache" />
            <Button
                android:id="@+id/btn_jni_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="JNI的使用" />
            <Button
            android:id="@+id/btn_comprehensive_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="综合技术" />
            <Button
                android:id="@+id/btn_performance_optimize_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Android性能优化" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
