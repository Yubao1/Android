<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_context_not_flag_start_activity"
        android:layout_width="match_parent"

        android:text="用Context启动一个Activity，没有添加Flag标志位"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_context_flag_start_activity"
        android:layout_width="match_parent"
        android:layout_marginTop="50px"

        android:text="用Context启动一个Activity，添加了Flag标志位"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_activtiy_start_activity"
        android:layout_width="match_parent"
        android:layout_marginTop="50px"
        android:text="用Activity启动另外一个Activity"
        android:layout_height="wrap_content" />
</LinearLayout>
