<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.androidart.activites.ViewGeneralSlideActivity">
    <TextView
        android:id="@+id/tv_scroll"
        android:layout_width="match_parent"
        android:layout_marginTop="20px"
        android:text="scrollTo滑动或者scrollBy滑动"
        android:background="#00FF00"
        android:onClick="onClick"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_object_animation"
        android:layout_width="match_parent"
        android:text="属性动画滑动"
        android:onClick="onClick"
        android:layout_marginTop="20px"
        android:background="#00FF00"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_change_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="20px"
        android:onClick="onClick"
        android:text="改变布局参数滑动"
        android:background="#00FF00"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_more_scroll"
        android:layout_width="match_parent"
        android:layout_marginTop="20px"
        android:onClick="onClick"
        android:text="多种scrollTo和scrollBy实现"
        android:background="#00FF00"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_random_slide"
        android:layout_width="match_parent"
        android:layout_marginTop="20px"
        android:onClick="onClick"
        android:text="这个是View的可随意滑动"
        android:gravity="center"
        android:background="#00FF00"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_mobile"
        android:layout_width="match_parent"
        android:layout_marginTop="20px"
        android:onClick="onClick"
        android:text="这个是可移动的View"
        android:gravity="center"
        android:background="#00FF00"
        android:layout_height="match_parent" />
</LinearLayout>
