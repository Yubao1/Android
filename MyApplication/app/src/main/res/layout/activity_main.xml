<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.myapplication.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FF00"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_test_activity"
                android:layout_width="match_parent"
                android:background="#FF0000"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="只是单纯测试一个bug" />
            <Button
                android:id="@+id/btn_android_art_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Android学习探索" />
            <Button
                android:id="@+id/btn_other_knowledge_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Android其他零碎知识点" />
            <Button
                android:id="@+id/btn_camera_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="照相机" />

            <Button
                android:id="@+id/btn_glide_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Glide图片加载框架" />

            <Button
                android:id="@+id/btn_jni_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="JNI" />

            <Button
                android:id="@+id/btn_recycler_view_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Recycler_View控件" />

            <Button
                android:id="@+id/btn_thread_pool_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="线程池" />

            <Button
                android:id="@+id/btn_json_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Json解析数据" />

            <Button
                android:id="@+id/btn_class_dynamic_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="动态加载对象方法" />

            <Button
                android:id="@+id/btn_okhttp_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="okhttp" />

            <Button
                android:id="@+id/btn_bluetooth_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="蓝牙功能" />

            <Button
                android:id="@+id/btn_record_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="录音功能未实现" />

            <Button
                android:id="@+id/btn_wifi_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="wifi功能" />
            <Button
                android:id="@+id/btn_progress_bar_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="圆形进度条" />
            <Button
                android:id="@+id/btn_fragment_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="测试Fragment" />
            <Button
                android:id="@+id/btn_progress_bar_2_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="圆形进度条2" />
            <Button
                android:id="@+id/btn_roll_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="自动点击和滚动" />
            <Button
                android:id="@+id/btn_shared_preferences_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="在不同的Context获取同一个SharedPreferences对象的数据" />
            <Button
                android:id="@+id/btn_sticky_event_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="测试粘性事件车" />
            <TextView
                android:id="@+id/tv_context_start_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="测试用Context启动一个Activity的demo" />

            <TextView
                android:id="@+id/tv_n_activity_start_service"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="测试N个Activity启动service是不是同一个服务" />
            <TextView
                android:id="@+id/tv_lauouy_inflater_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="测试LayoutInflater是否添加根布局" />
            <TextView
                android:id="@+id/tv_replace_qq_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="模仿更换QQ头像" />
            <TextView
                android:id="@+id/tv_net_dialog_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="请求网络的圆形进度条" />
            <TextView
                android:id="@+id/tv_frame_layout_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="优化FrameLayout" />
            <TextView
                android:id="@+id/tv_recycler_view_adapter_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="RecyclerView适配" />
            <TextView
                android:id="@+id/tv_custom_scan_view_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="自定义一个扫描的View" />
            <TextView
                android:id="@+id/tv_hidden_keyboard_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="隐藏键盘" />
            <TextView
                android:id="@+id/tv_test_list_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="测试一个方法内添加List数据" />
            <TextView
                android:id="@+id/tv_debug_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="debug模式" />
            <TextView
                android:id="@+id/tv_java_base_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="Java基础知识" />

            <TextView
                android:id="@+id/tv_test_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="其他零碎测试" />
            <TextView
                android:id="@+id/tv_andserver_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="Android的web服务器" />
            <TextView
                android:id="@+id/tv_memory_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="测试Android内存泄漏" />
            <TextView
                android:id="@+id/tv_start_command_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="service的onStartCommand方法的返回值测试" />
            <TextView
                android:id="@+id/tv_more_start_command_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="多个service的onStartCommand方法的执行顺序" />
            <TextView
                android:id="@+id/tv_demo_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="demoActivity" />
            <TextView
                android:id="@+id/tv_dynamic_regist_activity"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="动态注册广播" />
            <TextView
                android:id="@+id/tv_more_activity_start_service"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_marginTop="10px"
                android:background="#00ff00"
                android:text="测试不同的Activity启动的是否同一个Service对象" />

            <!--<TextView-->
                <!--android:id="@+id/tv_my_test2_activity"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="50px"-->
                <!--android:onClick="onClick"-->
                <!--android:gravity="center"-->
                <!--android:layout_marginTop="10px"-->
                <!--android:background="#00ff00"-->
                <!--android:text="单点测试" />-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
