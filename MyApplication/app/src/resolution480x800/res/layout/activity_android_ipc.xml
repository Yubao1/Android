<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_file_public_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="使用文件共享" />
            <TextView
                android:id="@+id/tv_messenger_activity"
                android:layout_width="match_parent"
                android:layout_marginTop="20px"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:gravity="center"
                android:textSize="20sp"
                android:background="#00FF00"
                android:textColor="#000000"
                android:text="使用Messenger" />
            <TextView
                android:id="@+id/tv_aidl_activity"
                android:layout_width="match_parent"
                android:layout_marginTop="20px"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:gravity="center"
                android:textSize="20sp"
                android:background="#00FF00"
                android:textColor="#000000"
                android:text="使用AIDL文件" />
            <TextView
                android:id="@+id/tv_content_provider_activity"
                android:layout_width="match_parent"
                android:layout_marginTop="20px"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:gravity="center"
                android:textSize="20sp"
                android:background="#00FF00"
                android:textColor="#000000"
                android:text="使用ContentProvider" />
            <TextView
                android:id="@+id/tv_socket_activity"
                android:layout_width="match_parent"
                android:layout_marginTop="20px"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:gravity="center"
                android:textSize="20sp"
                android:background="#00FF00"
                android:textColor="#000000"
                android:text="使用Socket通信" />

            <TextView
                android:id="@+id/tv_binder_activity"
                android:layout_width="match_parent"
                android:layout_marginTop="20px"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:gravity="center"
                android:textSize="20sp"
                android:background="#00FF00"
                android:textColor="#000000"
                android:text="Binder连接池" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
