<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.androidart.activites.ViewSlideConflictActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_out_intercapt_event"
        android:onClick="onClick"
        android:text="View的外部拦截事件，解决滑动冲突"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_manufacuring_slide_conflict"
        android:onClick="onClick"
        android:text="制造一个View的滑动冲突"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_in_intercapt_event"
        android:onClick="onClick"
        android:text="View的内部拦截事件，解决滑动冲突"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--<Button-->
        <!--android:id="@+id/btn_scroll_and_button_intercapt_event"-->
        <!--android:onClick="onClick"-->
        <!--android:text="制造ScrollView和Button的滑动冲突"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->
    <Button
        android:id="@+id/btn_scroll_and_list_intercapt_event"
        android:onClick="onClick"
        android:text="制造ScrollView和ListView的滑动冲突"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Android开发艺术探索-滑动冲突场景1-外部拦截" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Android开发艺术探索-滑动冲突场景1-内部拦截" />
    <Button
        android:id="@+id/btn_custom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="自定义View" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
